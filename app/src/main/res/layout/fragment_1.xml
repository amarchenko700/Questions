<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tvEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        tools:text="Отображение события"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Я первый фрагмент"
        android:gravity="center"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/frg1Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Событие 1"/>

    <Button
        android:id="@+id/frg1Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Событие 2"/>

    <Button
        android:id="@+id/frg1OpenFrg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Открыть фрагмент 2"/>

</LinearLayout>